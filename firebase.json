{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json", "**/.*", "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/profile.html", "destination": "/profile.html" },
      { "source": "/login.html", "destination": "/login.html" },
      { "source": "/index.html", "destination": "/index.html" },
      { "source": "**/*.js", "destination": "/config/firebaseConfig.js"}
    ],
    "headers": [
      {
        "source": "**/*.js", 
        "headers": [{ "key": "Content-Type", "value": "application/javascript" }]
      }
    ]
  }
}
