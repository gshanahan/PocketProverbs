{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json", "**/.*", "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "/index.html", "destination": "/index.html" },
      { "source": "/profile", "destination": "/profile.html" },
      { "source": "/login", "destination": "/login.html" }
    ]
  }
}
