{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/Profile",
        "destination": "/profile.html"
      },
      {
        "source": "/CommunityDashboard",
        "destination": "/communityDashboard.html"
      },
      {
        "source": "/FocusMode",
        "destination": "/focused.html"
      },
      {
        "source": "/Login",
        "destination": "/login.html"
      },
      {
        "source": "/",
        "destination": "/index.html"
      },
      {
        "source": "**/*.js",
        "destination": "/config/firebaseConfig.js"
      }
    ],
    "headers": [
      {
        "source": "**/*.js",
        "headers": [
          {
            "key": "Content-Type",
            "value": "application/javascript"
          }
        ]
      }
    ]
  }
}
